                                        placeholder="Your name" required value="{{itemsp.tensp}}" />

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" name="dongiaedit" class="form-control form-control-lg"
                                        placeholder="Đơn giá" required value="{{itemsp.dongia}}" />

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" name="coloredit" class="form-control form-control-lg"
                                    required value="{{itemsp.color}}" />

                                </div>

                                <div class="form-outline mb-4">
                                    <input type="text" name="loaispedit" class="form-control form-control-lg"
                                        required value="{{itemsp.loaisp}}" />

                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" name="imgspedit" class="form-control form-control-lg"
                                        value="{{itemsp.imgsp}}" />

                                </div>
                                <div class="form-outline mb-4">
                                    <input type="text" name="makhedit" class="form-control form-control-lg" value="{{itemsp.makh}}" />
                                
                                </div>
<div class="form-outline mb-4">
    <input type="text" name="tenkhedit" class="form-control form-control-lg" value="{{itemsp.tenkh}}" />

</div>



                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">SAVE</button>
                                </div>



                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>